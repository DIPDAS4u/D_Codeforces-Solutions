        #include <stdio.h>
     
        int main(){
            int n;
            scanf("%d", &n);
            int p;
            int police = 0, crime = 0;
            for(int i =0; i <n; i++){
                scanf("%d", &p);
                if(p == -1){
                    crime++;
                    if(police != 0){
                        crime--;
                        police--;
                    }
                }else{
                    police += p;
                }
            }
            printf("%d", crime);
        return 0;
        }
