        #include <stdio.h>
     
        int main(){
            int n;
            scanf("%d", &n);
            int Drink;
            float sum = 0.0;
            for(int i = 0; i < n; i++){
                scanf("%d", &Drink);
                sum += Drink;
            }
            printf("%.12f", sum/n);
            return 0;
        }
