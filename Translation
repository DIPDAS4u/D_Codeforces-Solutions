    #include <stdio.h>
    #include <string.h>
     
    int main() {
        char Ber[101];
        scanf("%100s", Ber);
     
        char Bir[101];
        scanf("%100s", Bir);
     
        if (strlen(Ber) != strlen(Bir)) {
            printf("NO\n");
            return 0;
        }
     
        int len = strlen(Ber);
        int flag = 1;
     
        for (int i = 0; i < len; i++) {
            if (Ber[i] != Bir[len - 1 - i]) {
                flag = 0;
                break;
            }
        }
     
        if (flag) {
            printf("YES\n");
        } else {
            printf("NO\n");
        }
     
        return 0;
    }
