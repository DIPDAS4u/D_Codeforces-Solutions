    #include <stdio.h>
     
    int main() {
        int n, a,b;
        scanf("%d", &n);
        int current = 0;
        int maxcapacity = 0;
     
        for(int i= 0; i<n; i++){
            scanf("%d %d", &a, &b);
            current -= a;
            current += b;
            if(current > maxcapacity){
                maxcapacity = current;
            }
        }
        printf("%d", maxcapacity);
        return 0;
    }
