           #include <stdio.h>
     
            int main(){
                int t;
                scanf("%d", &t);
                while(t--){
                    long long n;
                    scanf("%lld", &n);
                    if(n>2){
                        printf("%lld\n", (n-1)/2);
                    }else{
                        printf("0\n");
                    }
                }
            return 0;
            }
